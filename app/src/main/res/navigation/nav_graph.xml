<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/selectMethodFragment">

    <fragment
        android:id="@+id/selectMethodFragment"
        android:name="com.swedbankpay.exampleapp.selectmethod.SelectMethodFragment"
        android:label="SelectMethodFragment">
        <action
            android:id="@+id/action_selectMethodFragment_to_productsFragment"
            app:destination="@id/productsFragment" />
        <action
            android:id="@+id/action_selectMethodFragment_to_standaloneUrlConfigFragment"
            app:destination="@id/standaloneUrlConfigFragment" />
    </fragment>

    <fragment
        android:id="@+id/standaloneUrlConfigFragment"
        android:name="com.swedbankpay.exampleapp.standaloneurlconfig.StandaloneUrlConfigFragment"
        android:label="StandaloneUrlConfigFragment"/>

    <fragment
        android:id="@+id/productsFragment"
        android:name="com.swedbankpay.exampleapp.products.ProductsFragment"
        android:label="ProductsFragment" >
        <action
            android:id="@+id/action_productsFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
        <action
            android:id="@+id/action_productsFragment_to_successFragment"
            app:destination="@id/successFragment" />
        <action
            android:id="@+id/action_productsFragment_to_getPaymentTokenFragment"
            app:destination="@id/getPaymentTokenFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.swedbankpay.exampleapp.payment.PaymentContainerFragment"
        android:label="PaymentFragment" />
    <dialog
        android:id="@+id/successFragment"
        android:name="com.swedbankpay.exampleapp.SuccessFragment"
        android:label="SuccessFragment" />
    <fragment
        android:id="@+id/getPaymentTokenFragment"
        android:name="com.swedbankpay.exampleapp.payertokens.PayerOwnedTokensFragment"
        android:label="PayerOwnedTokensFragment" />
</navigation>