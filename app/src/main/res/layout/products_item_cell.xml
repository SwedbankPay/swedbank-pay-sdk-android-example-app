<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="32dp">
    <ImageView
        android:id="@+id/item_background"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:src="@drawable/item_background"
        android:importantForAccessibility="no"
        tools:tint="#FFCFCF"
        />
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="210dp"
        android:layout_height="210dp"
        app:layout_constraintStart_toStartOf="@id/item_background"
        app:layout_constraintEnd_toEndOf="@id/item_background"
        app:layout_constraintTop_toTopOf="@id/item_background"
        app:layout_constraintBottom_toBottomOf="@id/item_background"
        android:scaleType="centerInside"
        android:contentDescription="@string/item_image"
        tools:src="@drawable/pink_sneakers"
        />
    <TextView
        style="@style/medium_text"
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_background"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        tools:text="Pink sneakers"
        />
    <TextView
        style="@style/small_text"
        android:id="@+id/item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        tools:text="1 599 SEK"
        />
    <LinearLayout
        android:id="@+id/add_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_price"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:background="@drawable/expanding_button_background"
        tools:backgroundTint="@color/remove_from_cart_button">
        <ImageView
            android:id="@+id/add_remove_button_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:importantForAccessibility="no"
            tools:src="@drawable/ic_remove_from_cart"
            />
        <TextView
            style="@style/tiny_white_text"
            android:id="@+id/remove_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:text="@string/remove"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>